{{ 'component-content-image.css' | asset_url | stylesheet_tag }}
<div class="page-width content-image__inner">
  <div class="content-image__image">
    <img
      src="{{ section.settings.image.src | img_url: '640x400' }}"
      srcset="{{ section.settings.image.src | img_url: '1280x800', scale: 2}} 2x"
      alt="{{ section.settings.image.alt }}">
  </div>
  <div class="content-image__content">
    {% if section.settings.title %}
      <h2 class="content-image__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.content %}
      <p class="content-image__copy">{{ section.settings.content }}</p>
    {% endif %}
    {% if section.settings.cta_url and section.settings.cta_text %}
      <a href="{{ section.settings.cta_url }}" class="button button--secondary">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Content Image",
    "class": "section content-image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Snuggly, breezy and sustainable",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Content",
        "default": "Soft enough for the most sensitive skin, better-performing than traditional materials, and kinder for the environment."
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      }, {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      }
    ],
    "presets": [
      {
        "name": "Content Image",
        "category": "Advanced Layout"
      }
    ]
  }
{% endschema %}