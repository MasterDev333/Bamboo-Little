{{ 'component-content-grid.css' | asset_url | stylesheet_tag }}
<div class="page-width">
  {% if section.settings.heading %}
    <h2 class="h1 content-grid__heading">{{ section.settings.heading }}</h2>
  {% endif %}
  <div class="content-grid__row">
    {% for block in section.blocks %}
      <div class="content-grid__col">
        {% if block.settings.image %}
          <div class="content-grid__image">
            <img
              src="{{ block.settings.image | img_url: '394x260' }}"
              srcset="{{ block.settings.image | img_url: '788x520', scale: 2 }} 2x"
              alt=""
            >
          </div>
        {% endif %}
        {% if block.settings.cta_url and block.settings.cta_text %}
          <a href="{{ block.settings.cta_url }}" class="button button--secondary">
            {{ block.settings.cta_text }}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Content Grid",
  "class": "section content-grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "cta_url",
          "label": "CTA URL"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Grid",
      "category": "Advanced Layout",
      "blocks": [
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
